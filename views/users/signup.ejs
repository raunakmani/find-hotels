<% layout('layouts/boiler') -%>
<body>
<div class="row">
    <div class="col col-6 offset-2 mt-3" >
      <h3>sign in wondrlust</h3>
        <form method="POST" action="/signup" class=" needs-validation" novalidate> 
          <div class="mb-3 ">  
            <label class="user" for="exampleCheck1" class="form-label">User name</label>
            <input type="text" name="username" class="form-control"  id="username" required />
          </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" name="email" id="email"  class="form-control" required>
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password"  name="password" class="form-control" id="exampleInputPassword1" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</div>

</body>


